<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.snake.chinese.model.relation.WordType">
    <resultMap type="com.snake.chinese.model.relation.WordType" id="wordTypeResultMap">
        <result property="id" column="id_"/>
        <result property="wordId" column="word_id"/>
        <result property="typeId" column="type_id"/>
    </resultMap>

    <select id="selectAll" resultMap="wordTypeResultMap">
		select * from book_word_type
	</select>

    <select id="selectSome" parameterType="java.util.Map" resultMap="wordTypeResultMap">
        select * from book_word_type limit #{offset},#{limit}
    </select>

    <select id="getTotalCount" resultType="java.lang.Integer">
        select count(1) from book_word_type
    </select>

    <select id="getObject" resultMap="wordTypeResultMap" parameterType="java.lang.Object">
        select * from book_word_type where id_ = #{id}
    </select>

    <insert id="insert" parameterType="com.snake.chinese.model.relation.WordType">
        insert into book_word_type(word_id,type_id)
        values(#{wordId},#{typeId})
    </insert>

    <update id="update" parameterType="com.snake.chinese.model.relation.WordType">
        update book_word_type
        <set>
            <if test="wordId != null">
              word_id=#{wordId},
            </if>
            <if test="typeId != null">
              type_id=#{typeId},
            </if>
        </set>
        where id_ = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Object">
        delete from book_word_type where id_ = #{id}
    </delete>

    <select id="findOneByMap" resultMap="wordTypeResultMap">
        select * from book_word_type where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} = #{param.value}
        </foreach>
        limit 0, 1
    </select>

    <select id="findOneByObject" parameterType="com.snake.chinese.model.relation.WordType" resultMap="wordTypeResultMap">
        select * from book_word_type
        <where>
            <if test="typeId != null">
                and type_id = #{typeId}
            </if>
            <if test="wordId != null">
                and word_id = #{wordId}
            </if>
        </where>
        limit 0, 1
    </select>

    <select id="findByMap" resultMap="wordTypeResultMap">
        select * from book_word_type where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} = #{param.value}
        </foreach>
    </select>

    <select id="findByObject" parameterType="com.snake.chinese.model.relation.WordType" resultMap="wordTypeResultMap">
        select * from book_word_type
        <where>
            <if test="typeId != null">
                and type_id = #{typeId}
            </if>
            <if test="wordId != null">
                and word_id = #{wordId}
            </if>
        </where>
    </select>

    <select id="findByIn" resultMap="wordTypeResultMap">
        select * from book_word_type where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} IN (#{param.value})
        </foreach>
    </select>

    <select id="findByLike" resultMap="wordTypeResultMap">
        select * from book_word_type where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} LIKE #{param.value}
        </foreach>
    </select>

    <select id="getCount" parameterType="java.util.Map" resultType="int">
        select count(1) from book_word_type where 1=1
        <if test="whereClause != null">
            ${whereClause}
        </if>
    </select>

    <select id="query" parameterType="java.util.Map" resultMap="wordTypeResultMap">
        select ${fieldsClause} from book_word_type where 1=1
        <if test="whereClause != null">
            ${whereClause}
        </if>
        <if test="orderClause != null">
            ${orderClause}
        </if>
        <if test="limit > 0">
            limit ${limit} offset ${offset}
        </if>
    </select>

    <delete id="deleteObject" parameterType="com.snake.chinese.model.relation.WordType">
        delete from book_word_type
        <where>
            <if test="id != null">
                and id_=#{id}
            </if>
            <if test="wordId != null">
                and word_id=#{wordId}
            </if>
            <if test="typeId != null">
                and type_id=#{typeId}
            </if>
        </where>
    </delete>

</mapper>