<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.snake.book.model.Mark">
    <resultMap type="com.snake.book.model.Mark" id="markResultMap">
        <result property="id" column="id_"/>
        <result property="name" column="name_"/>
        <result property="url" column="url_"/>
        <result property="createdTime" column="created_time"/>
        <result property="creatorId" column="creator_id"/>
    </resultMap>

    <select id="selectAll" resultMap="markResultMap">
		select * from book_mark
	</select>

    <select id="selectSome" parameterType="java.util.Map" resultMap="markResultMap">
        select * from book_mark limit #{offset},#{limit}
    </select>

    <select id="getTotalCount" resultType="java.lang.Integer">
        select count(1) from book_mark
    </select>

    <select id="getObject" resultMap="markResultMap" parameterType="java.lang.Object">
        select * from book_mark where id_ = #{id}
    </select>

    <insert id="insert" parameterType="com.snake.book.model.Mark">
        insert into book_mark(id_,name_,url_,created_time,creator_id)
        values(#{id},#{name},#{url},now(),#{creatorId})
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">
            select last_insert_id() as id
        </selectKey>
    </insert>

    <update id="update" parameterType="com.snake.book.model.Mark">
        update book_mark
        <set>
            <if test="name != null">
              name_=#{name},
            </if>
            <if test="url != null">
              url_=#{url},
            </if>
            <if test="creatorId != null">
              creator_id = #{creatorId}
            </if>
        </set>
        where id_ = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Object">
        delete from book_mark where id_ = #{id}
    </delete>

    <select id="findOneByMap" resultMap="markResultMap">
        select * from book_mark where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} = #{param.value}
        </foreach>
        limit 0, 1
    </select>

    <select id="findOneByObject" parameterType="com.snake.book.model.Mark" resultMap="markResultMap">
        select * from book_mark
        <where>
            <if test="name != null">
                and name_=#{name}
            </if>
            <if test="url != null">
                and url_ = #{url}
            </if>
            <if test="creatorId != null">
                and creator_id = #{creatorId}
            </if>
        </where>
        limit 0, 1
    </select>

    <select id="findByMap" resultMap="markResultMap">
        select * from book_mark where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} = #{param.value}
        </foreach>
    </select>

    <select id="findByObject" parameterType="com.snake.book.model.Mark" resultMap="markResultMap">
        select * from book_mark
        <where>
            <if test="name != null">
                and name_=#{name}
            </if>
            <if test="url != null">
                and url_ = #{url}
            </if>
            <if test="creatorId != null">
                and creator_id = #{creatorId}
            </if>
        </where>
    </select>

    <select id="findByIn" resultMap="markResultMap">
        select * from book_mark where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} IN (#{param.value})
        </foreach>
    </select>

    <select id="findByLike" resultMap="markResultMap">
        select * from book_mark where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} LIKE #{param.value}
        </foreach>
    </select>

    <select id="getCount" parameterType="java.util.Map" resultType="int">
        select count(1) from book_mark where 1=1
        <if test="whereClause != null">
            ${whereClause}
        </if>
    </select>

    <select id="query" parameterType="java.util.Map" resultMap="markResultMap">
        select ${fieldsClause} from book_mark where 1=1
        <if test="whereClause != null">
            ${whereClause}
        </if>
        <if test="orderClause != null">
            ${orderClause}
        </if>
        <if test="limit > 0">
            limit ${limit} offset ${offset}
        </if>
    </select>

</mapper>