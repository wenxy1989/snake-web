<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.snake.mysql.model.Table">
    <resultMap type="com.snake.mysql.model.Table" id="tableResultMap">
        <result property="id" column="id_"/>
        <result property="databaseId" column="database_id"/>
        <result property="name" column="name_"/>
        <result property="code" column="code_"/>
        <result property="comment" column="comment_"/>
        <result property="createdTime" column="created_time"/>
        <result property="creatorId" column="creator_id"/>
    </resultMap>

    <select id="selectAll" resultMap="tableResultMap">
		select id_,database_id,name_,code_,comment_,created_time,creator_id from mysql_table
	</select>

    <select id="selectSome" parameterType="java.util.Map" resultMap="tableResultMap">
        select id_,database_id,name_,code_,comment_,created_time,creator_id from mysql_table limit #{offset},#{limit}
    </select>

    <select id="getTotalCount" resultType="java.lang.Integer">
        select count(1) from mysql_table
    </select>

    <select id="getObject" resultMap="tableResultMap" parameterType="java.lang.Object">
        select id_,database_id,name_,code_,comment_,created_time,creator_id from mysql_table where id_ = #{id}
    </select>

    <insert id="insert" parameterType="com.snake.mysql.model.Table">
        insert into mysql_table(id_,database_id,name_,code_,comment_,created_time,creator_id)
        values(#{id},#{databaseId},#{name},#{code},#{comment},now(),#{creatorId})
        <selectKey resultType="java.lang.Long" order="AFTER" keyProperty="id">
            select last_insert_id() as id
        </selectKey>
    </insert>

    <update id="update" parameterType="com.snake.mysql.model.Table">
        update mysql_table
        <set>
            <if test="databaseId != null">
                database_id=#{databaseId},
            </if>
            <if test="name != null">
                name_=#{name},
            </if>
            <if test="code != null">
                code_=#{code},
            </if>
            <if test="comment != null">
                comment_=#{comment},
            </if>
        </set>
        where id_ = #{id}
    </update>

    <delete id="delete" parameterType="java.lang.Object">
        delete from mysql_table where id_ = #{id}
    </delete>

    <select id="findOneByMap" resultMap="tableResultMap">
        select id_,database_id,name_,code_,comment_,created_time,creator_id from mysql_table where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} = #{param.value}
        </foreach>
        limit 0, 1
    </select>

    <select id="findOneByObject" parameterType="com.snake.mysql.model.Table" resultMap="tableResultMap">
        select id_,database_id,name_,code_,comment_,created_time,creator_id from mysql_table
        <where>
            <if test="databaseId != null">
                and database_id=#{databaseId}
            </if>
            <if test="name != null">
                and name_=#{name}
            </if>
            <if test="code != null">
                and code_=#{code}
            </if>
            <if test="comment != null">
                and comment_=#{comment}
            </if>
        </where>
        limit 0, 1
    </select>

    <select id="findByObject" parameterType="com.snake.mysql.model.Table" resultMap="tableResultMap">
        select id_,database_id,name_,code_,comment_,created_time,creator_id from mysql_table
        <where>
            <if test="databaseId != null">
                and database_id=#{databaseId}
            </if>
            <if test="name != null">
                and name_=#{name}
            </if>
            <if test="code != null">
                and code_=#{code}
            </if>
            <if test="comment != null">
                and comment_=#{comment}
            </if>
        </where>
    </select>

    <select id="findByMap" resultMap="tableResultMap">
        select id_,database_id,name_,code_,comment_,created_time,creator_id from mysql_table where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} = #{param.value}
        </foreach>
    </select>

    <select id="findByIn" resultMap="tableResultMap">
        select id_,database_id,name_,code_,comment_,created_time,creator_id from mysql_table where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} IN (#{param.value})
        </foreach>
    </select>

    <select id="findByLike" resultMap="tableResultMap">
        select id_,database_id,name_,code_,comment_,created_time,creator_id from mysql_table where 1=1 AND
        <foreach item="param" index="key" collection="list"  open="" separator="AND" close="">
            ${param.name} LIKE #{param.value}
        </foreach>
    </select>

    <select id="getCount" parameterType="java.util.Map" resultType="int">
        select count(1) from mysql_table where 1=1
        <if test="whereClause != null">
            ${whereClause}
        </if>
    </select>

    <select id="query" parameterType="java.util.Map" resultMap="tableResultMap">
        select ${fieldsClause} from mysql_table where 1=1
        <if test="whereClause != null">
            ${whereClause}
        </if>
        <if test="orderClause != null">
            ${orderClause}
        </if>
        <if test="limit > 0">
            limit ${limit} offset ${offset}
        </if>
    </select>

    <delete id="deleteByDatabaseId" parameterType="java.lang.Long">
        delete from mysql_table where database_id=#{value}
    </delete>

</mapper>